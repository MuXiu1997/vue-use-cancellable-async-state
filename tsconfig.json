{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["src/*"],
      "~": ["src"],
      "#/*": ["test/*"],
      "#": ["test"]
    },
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ]
}
